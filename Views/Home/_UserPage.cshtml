@model IEnumerable<ECommerceProject.Models.Product>


<div class="container mt-5 mb-5">
    <div class="row">
        @foreach (var product in Model.Take(12)) 
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-2">
                <div class="card h-90">
                    <div class="card-img-container">
                       @*  <img src="~/uploads/product/@product.Image" class="card-img-top" alt="@product.Name"> *@
                        <img src="@Url.Content(product.Image)" class="card-img-top" alt="@product.Name"  />
                    </div>
                    <div class="p-2 d-flex flex-column">
                        <h5 class="card-title mt-auto">@product.Name</h5>
                        <div class="d-flex justify-content-between ">
                            <div class="d-flex align-items-center">
                                @if (product.OfferPercentage > 0)
                                {
                                    <span class="text-danger mr-2 large-text">@product.OfferPercentage% Off</span>
                                }
                                <span class="text-success large-text">@(((int)(product.Price - (product.Price * (decimal)product.OfferPercentage / 100))).ToString("C"))</span>
                            </div>
                        </div>
                        <div class="text-muted d-flex">
                            <del>@product.Price.ToString("C")</del>
                        </div>
                        <div class="mt-1">
                            <a asp-action="QuickView" asp-route-id="@product.ProductId" class="btn btn-dark btn-block">Quick View</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-img-container {
            height: 200px; /* Fixed height for the image container */
            overflow: hidden; /* Hide any overflow */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-img-top {
            max-height: 100%;
            max-width: 100%;
            object-fit: cover; /* Ensure image covers the container while maintaining aspect ratio */
        }

        .card-body {
            -ms-flex: 1 1 auto;
            flex: 1 1 auto;
            min-height: 1px;
            padding: 0.25rem;
        }

        .card-title,
        .card-text {
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .large-text {
            font-size: 1.25rem; /* Adjust this value as needed */
        }

        .btn-block {
            margin-top: auto; /* Ensure the button stays at the bottom */
        }
    </style>
}
