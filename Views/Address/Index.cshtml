@model List<ECommerceProject.Models.Address>

@{
    ViewData["Title"] = "Your Addresses";
}

<h2>Your Addresses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Mobile Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr>
                <td>@address.FullName</td>
                <td>@address.MobileNumber</td>
                <td>
                    @address.Apartment, @address.Street, @address.Landmark<br />
                    @address.City, @address.State, @address.Pincode<br />
                    @address.Country
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@address.AddressId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@address.AddressId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Address</a>