@model ECommerceProject.Models.Address

@{
	ViewData["Title"] = Model != null && Model.AddressId == 0 ? "Add New Address" : "Edit Address";
}

<h2>@ViewData["Title"]</h2>
<div class="card mb-6">
	<!-- /.card-header -->
	<div class="card-body">
		<form asp-action="@(Model != null && Model.AddressId == 0 ? "Create" : "Edit")" method="post">
			<input type="hidden" asp-for="AddressId" />
			<input type="hidden" asp-for="UserId" class="form-control" />
			<div class="form-group">
				<label asp-for="FullName"></label>
				<input asp-for="FullName" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="MobileNumber"></label>
				<input asp-for="MobileNumber" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Pincode"></label>
				<input asp-for="Pincode" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Apartment"></label>
				<input asp-for="Apartment" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Street"></label>
				<input asp-for="Street" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Landmark"></label>
				<input asp-for="Landmark" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="City"></label>
				<input asp-for="City" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="State"></label>
				<input asp-for="State" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Country"></label>
				<input asp-for="Country" class="form-control" />
			</div>
			<button type="submit" class="btn btn-primary">Save Address</button>
		</form>
	</div>
</div>
